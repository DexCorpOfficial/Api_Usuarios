@model Api_Post.Models.Cuenta

@{
    ViewData["Title"] = "Detalles de la Cuenta";
}

<h1>Detalles de la Cuenta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
            Foto de Perfil
        </dt>
        <dd class="col-sm-10">
            @if (Model.FotoPerfil != null)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(Model.FotoPerfil))" alt="Foto de Perfil" style="max-width: 150px; max-height: 150px;" />
            }
            else
            {
                <p>No hay foto de perfil</p>
            }
        </dd>

        <dt class="col-sm-2">
            Biografía
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Biografia)
        </dd>

        <dt class="col-sm-2">
            Seguidores
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguidores)
        </dd>

        <dt class="col-sm-2">
            Género
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>

        <dt class="col-sm-2">
            Seguidos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguidos)
        </dd>

        <dt class="col-sm-2">
            Fecha de Creación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>

        <dt class="col-sm-2">
            Fecha de Nacimiento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>

        <dt class="col-sm-2">
            Es Músico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Musico)
        </dd>

        <dt class="col-sm-2">
            Activo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>

        <dt class="col-sm-2">
            Privado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Privado)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
