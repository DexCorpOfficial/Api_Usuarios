@model Api_Usuarios.Models.Cuenta

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Cuenta</h1>

<h3>¿Está seguro de que desea eliminar esta cuenta?</h3>
<hr />
<div>
    <h4>Detalles de la cuenta</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Foto de Perfil</dt>
        <dd class="col-sm-10">
            @if (Model.foto_perfil != null)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(Model.foto_perfil))" alt="Foto de Perfil" style="max-width: 150px; max-height: 150px;" />
            }
            else
            {
                <p>No hay foto de perfil</p>
            }
        </dd>

        <dt class="col-sm-2">Biografía</dt>
        <dd class="col-sm-10">@Model.Biografia</dd>

        <dt class="col-sm-2">Fecha de Creación</dt>
        <dd class="col-sm-10">@Model.Fecha_Creacion</dd>

        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.fecha_nac</dd>

        <dt class="col-sm-2">Es Músico</dt>
        <dd class="col-sm-10">@Model.Musico</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@Model.Activo</dd>

        <dt class="col-sm-2">Privado</dt>
        <dd class="col-sm-10">@Model.Privado</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
